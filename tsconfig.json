{
  "compilerOptions": {
    "strict": true,
    "target": "es2016",
    "declaration": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "shared/*": ["./src/shared/*"],
      "routes/*": ["./src/routes/*"],
      "v2/*": ["./src/v2/*"]
    }
  }
}
